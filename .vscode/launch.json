    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Worker",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/build/**/*.js.map"
            ],
        },
        // Have a joined launch 
        // Run tests (tests don't need debugging)
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/build/**/*.js.map"
            ],
        },
    ],
    "compounds": [
        {
            "name": "Worker + Test",
            "configurations": [
                "Worker",
                "Test"
            ],
            "stopAll": true
        }
    ]
}